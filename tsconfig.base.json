{
    "compileOnSave": false,
    "buildOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "importHelpers": true,
        "strictNullChecks": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "removeComments": false,
        "sourceMap": true,
        "jsx": "react",
        "lib": [
            "es2015",
            "dom"
        ],
        "baseUrl": "./src",
        "paths": {
            "ol": [
                "../node_modules/@hanreev/types-ol/ol"
            ],
            "ol/*": [
                "../node_modules/@hanreev/types-ol/ol/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "e2e",
        "typings/main",
        "typings/main.d.ts"
    ]
}